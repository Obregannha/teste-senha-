<div class="container">
    <h2>Digite a senha para acessar o conteúdo</h2>
    <input type="password" id="password" placeholder="Digite a senha">
    <button onclick="checkPassword()">Entrar</button>
    
    <div id="text-section">
        <h2>Texto Secreto</h2>
        <p>Aqui está o texto que você quer proteger. Escreva o que quiser aqui!</p>
    </div>
</div>

<script>
    function checkPassword() {
        var password = document.getElementById("password").value;
        var correctPassword = "teste"; // Altere para a senha desejada
        
        if (password === correctPassword) {
            document.getElementById("text-section").style.display = "block";
        } else {
            alert("Senha incorreta. Tente novamente.");
        }
    }
</script>

